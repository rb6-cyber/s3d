#BINS=3dsloader filebrowser pyramide dot_mcp linktest stringtest s3dvt
BIN=s3dgps
SOURCES=s3dgps.c
LIBS=-ls3d -lgps `simage-config --libs` -lm
OBJS=$(SOURCES:.c=.o)
CC=gcc
LD=gcc
PREFIX=@PREFIX@
CFLAGS=-pedantic -Wall @DEVEL_CFLAGS@ -I$(PREFIX)/include/s3d/ `simage-config --cflags`
LDFLAGS=@DEVEL_LDFLAGS@ 
INSTALL_PROGRAM= /usr/bin/install -c -s -m 755
.SUFFIXES: .c
default:	all
all:	$(BIN) 
$(BIN):		$(OBJS)
	$(LD) $(OBJS) $(LIBS) -o $@
.c.o:
	gcc $(CFLAGS) -c $<
clean:
	rm -rf $(OBJS) $(BIN)
depend:
	makedepend $(CFLAGS) $(SOURCES)
install:
	$(INSTALL_PROGRAM) $(BIN) $(PREFIX)/bin
