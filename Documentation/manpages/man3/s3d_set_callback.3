 void obj_click(struct s3d_evt event)
 {
         printf("object id %"PRIu32" got clicked", *((uint32_t *)event\->buf));
 }
 \&.\&.\&.
 s3d_set_callback(S3D_EVENT_NEW_OBJECT, obj_click);
 // this will tell you when a object got clicked
